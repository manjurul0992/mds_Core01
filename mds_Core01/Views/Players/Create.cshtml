@model mds_Core01.Models.ViewModels.PlayerVM
@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4 text-center">Add New Player</h1>
<div class="row">
    <div class="col">
        <form asp-action="Create" asp-controller="Players" method="post" enctype="multipart/form-data">
            <div class="d-flex justify-content-between">





                <div class="col-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row mb-2">
                        <label class="col-form-label col-3">@Html.DisplayNameFor(x=>x.PlayerName)</label>
                        <div class="col-6">
                            <input asp-for="PlayerName" class="form-control" />
                        </div>
                        <div class="col-3">
                            <span asp-validation-for="PlayerName" class="text-danger"></span>
                        </div>
                    </div>




                    <div class="row mb-2">
                        <label class="col-form-label col-3">@Html.DisplayNameFor(x=>x.BirthDate)</label>
                        <div class="col-6">
                            <input asp-for="BirthDate" class="form-control" type="date" />
                        </div>
                        <div class="col-3">
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row mb-2">
                        <label class="col-form-label col-3">@Html.DisplayNameFor(x=>x.Phone)</label>
                        <div class="col-6">
                            <input asp-for="Phone" class="form-control" />
                        </div>
                        <div class="col-3">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row mb-2">
                        <label class="col-form-label col-3">@Html.DisplayNameFor(x=>x.PicturePath)</label>
                        <div class="col-6">
                            <input asp-for="PicturePath" class="form-control" type="file" />
                        </div>
                        <div class="col-3">
                            <span asp-validation-for="PicturePath" class="text-danger"></span>
                        </div>
                    </div>



                    <div class="row mb-2">
                        <label class="col-form-label col-3">@Html.DisplayNameFor(x=>x.MaritalStatus)</label>
                        <div class="col-6">
                            <input asp-for="MaritalStatus" class="form-check-input" />
                        </div>
                        <div class="col-3">
                            <span asp-validation-for="MaritalStatus" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row mb-2">

                        <div class="col-9 offset-3">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex justify-content-end">
                        <a id="btnAdd" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i>+Add</a>
                    </div>
                    <div id="FormatContainer">
                        <script>
                            LoadData();
                        </script>
                    </div>
                </div>
            </div>
        </form>
        <div>
            <a asp-action="Index" asp-controller="Players" class="btn btn-outline-primary"><i class="fa fa-arrow-left"></i>Back To List</a>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


